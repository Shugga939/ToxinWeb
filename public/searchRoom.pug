block content
  .wrapper_searchRoom
    .filter
      .dates
        .title.input_selected Даты пребывания в отеле
        input(
          type="text"
          name="dateFilter"
          readonly = "true"
          placeholder = "19 авг - 23 авг"
          )
        button(type="button").dropbutton-middle.dropbutton_close
      .guests
        .title.input_selected Гости
        input(
          type="text"
          name="dateFilter"
          readonly = "true"
          placeholder = "3 Гостя, 1 младенец"
          )
        button(type="button").dropbutton-middle.dropbutton_close
      .price
        .title Диапазон цены
        .range-slider-container 
          input(type="text" class='slider-value' value='5 000P - 10 000P' readonly='true')
          .range-slider
