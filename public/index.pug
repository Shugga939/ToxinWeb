extends ../layout/main
block variables
    -var pageTitle= 'Забронировать номер'

block content
    .wrapper
        div.find
            h1 Найдём номера под ваши пожелания  
            .find-arrival Прибытие<br>
                input(
                    type="text"
                    name="date"
                    id="startdate"
                    readonly = "true"
                    placeholder = "ДД.ММ.ГГГГ"
                    )
                button#butt
            .find-departure Выезд <br>
                input(
                    type="text"
                    name="date"
                    id="enddate"
                    readonly = "true"
                    placeholder = "ДД.ММ.ГГГГ"
                    )
                button#butt2
            .find-guests Гости
                input(
                    type="text"
                    name="guests"
                    readonly = "true"
                    placeholder = "Сколько гостей"
                    )
                button#butt3
            .find-guestsChoice
                .visitors Взрослые
                    button.minus(id = "adult-") -
                    span#counterAdult 0
                    button.plus(id = "adult+") +
                .visitors Дети
                    button.minus(id = "child-") -
                    span#counterChild 0
                    button.plus(id = "child+") +
                .visitors Младенцы
                    button.minus(id = "baby-") -
                    span#counterBaby 0
                    button.plus(id = "baby+") +
                .find-buttons
                    button#clearCounter Очистить
                    button#confirmCounter Применить

        .sub Лучшие номера для вашей работы, <br>отдыха и просто вдохновения
                
            
        





                
        
