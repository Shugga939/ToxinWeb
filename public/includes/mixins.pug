        img(src=data.srcImg1, alt="photo1")
        img(src=data.srcImg2, alt="photo2")
        img(src=data.srcImg3, alt="photo3")
      if data.images=='2'
        img(src=data.srcImg1, alt="photo1")
        img(src=data.srcImg2, alt="photo2")
      if data.images=='1'
        img(src=data.srcImg1, alt="photo1")
