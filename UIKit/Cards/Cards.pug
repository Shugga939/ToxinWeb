mixin roomCart(data)
  .room-cart 
    .room-cart-slick
      if data.images=='4'
        img(src=data.srcImg1, alt="photo1")
        img(src=data.srcImg2, alt="photo2")
        img(src=data.srcImg3, alt="photo3")
        img(src=data.srcImg4, alt="photo4")
      if data.images=='3'
        img(src=data.srcImg1, alt="photo1")
        img(src=data.srcImg2, alt="photo2")
        img(src=data.srcImg3, alt="photo3")
      if data.images=='2'
        img(src=data.srcImg1, alt="photo1")
        img(src=data.srcImg2, alt="photo2")
      if data.images=='1'
        img(src=data.srcImg1, alt="photo1")
    .room-cart-number_and_price
      .number № 
        span=data.number
        if data.luxe=='true'
          span Люкс
      .price=data.price+'₽'
        span  в сутки
    .room-cart-raiting
      .room-cart-raiting-stars
        if data.stars=='5'
          span.active
          span.active
          span.active
          span.active
          span.active
        if data.stars=='4'
          span.active
          span.active
          span.active
          span.active
          span.pasive
        if data.stars=='3'
          span.active
          span.active
          span.active
          span.pasive
          span.pasive
        if data.stars=='2'
          span.active
          span.active
          span.pasive
          span.pasive
          span.pasive
        if data.stars=='1'
          span.active
          span.pasive
          span.pasive
          span.pasive
          span.pasive
      .room-cart-raiting-reviews=data.reviews
        span  Отзывов

