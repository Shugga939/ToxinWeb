mixin checkbox(name)
  .checkboxContainer
    label.checkbox
      input(type="checkbox")
      span.checkbox-background
      span.name=name

mixin checkboxChecked(name)
  .checkboxContainer
      label.checkbox
        input(type="checkbox" checked='checked')
        span.checkbox-background
        span.name=name

mixin checkboxWithDesc(name, desc)
  .checkboxContainer
      label.checkbox
        input(type="checkbox")
        span.checkbox-background
        span.name=name
        .description=desc

mixin advantage(name)
  if name =='Комфорт'
    -var desc = 'Шумопоглащающие стены'
    -var picClass = 'picComfort'
  if name == 'Удобство'
    -var desc = 'Окно в каждой из спален'
    -var picClass = 'picConvenience'
  .advantage
    div(class='' + picClass)
    span.advantage-name= name
    span.advantage-description= desc

